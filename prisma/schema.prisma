model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String
  price       Float
  category    String
  brand       String
  images      String[]
  stock       Int      @default(0)
  rating      Float    @default(0)
  reviews     Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}